@model TestTask1.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Создать заказ</h1>

<!--<h4>Заказ</h4>-->
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SenderCity" class="control-label">Город отправителя</label>
                <input asp-for="SenderCity" class="form-control" />
                <span asp-validation-for="SenderCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenderAddress" class="control-label">Адрес отправителя</label>
                <input asp-for="SenderAddress" class="form-control" />
                <span asp-validation-for="SenderAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecieverCity" class="control-label">Город получателя</label>
                <input asp-for="RecieverCity" class="form-control" />
                <span asp-validation-for="RecieverCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecieverAddress" class="control-label">Адрес получателя</label>
                <input asp-for="RecieverAddress" class="form-control" />
                <span asp-validation-for="RecieverAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Вес груза, кг</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата приёма заказа</label>
                <input asp-for="Date" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model TestTask1.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Детали заказа</h1>

<div>
    <!--<h4>Заказ</h4>-->
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Город отправителя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SenderCity)
        </dd>
        <dt class = "col-sm-2">
            Адрес отправителя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SenderAddress)
        </dd>
        <dt class = "col-sm-2">
            Город получателя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecieverCity)
        </dd>
        <dt class = "col-sm-2">
            Адрес получателя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecieverAddress)
        </dd>
        <dt class = "col-sm-2">
            Вес груза, кг
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class = "col-sm-2">
            Дата приёма груза
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("dd.MM.yyyy")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку заказов</a>
</div>

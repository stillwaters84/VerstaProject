@model TestTask1.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить заказ</h1>

<h3>Вы уверены что хотите удалить этот заказ?</h3>
<div>
    <!--<h4>Order</h4>-->
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Город отправителя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SenderCity)
        </dd>
        <dt class = "col-sm-2">
            Адрес отправителя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SenderAddress)
        </dd>
        <dt class = "col-sm-2">
            Город получателя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecieverCity)
        </dd>
        <dt class = "col-sm-2">
            Адрес получателя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecieverAddress)
        </dd>
        <dt class = "col-sm-2">
            Вес груза, кг
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class = "col-sm-2">
            Дата приёма груза
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
